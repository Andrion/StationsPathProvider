@{
    ViewBag.Title = "title";
    Layout = "../_Layout.cshtml";
}

@section scripts {
    <script type="text/javascript" src="http://api-maps.yandex.ru/2.0/?load=package.full&lang=ru-RU&key=@ConfigurationHelper.Instance.YMapsApiKey"></script>
    <script type="text/javascript">
        var ymapsApiKey = '@ConfigurationHelper.Instance.YMapsApiKey';
    </script>
    <script type="text/javascript" src="~/Scripts/app.admin.map.yandex.js"></script>
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3">
            <div class="hide" id="pNameFilter">
                <input type="text" id="tbxNameFilter" class="input-block-level" placeholder="Name filter..." />
            </div>
            <ul id="lstStations" class="stations unstyled window-height"></ul>
        </div>
        <div class="span9">
            <div id="map" class="google-maps"></div>
        </div>
    </div>
</div>


@section footer {
    <script type="text/x-jquery-tmpl" id="tmplStation">
        <li class="station thumbnail" data-id="${station.id}" data-lat="${station.lat}" data-lng="${station.lng}">
            <i class="icon-{{if handled != null}}ok{{else}}remove{{/if}}"></i>
            ${station.name}
        </li>
    </script>
}