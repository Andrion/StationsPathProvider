@{
    ViewBag.Title = "title";
    Layout = "../_Layout.cshtml";
}

@section scripts {
    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?hl=ru&sensor=false&libraries=places"></script>
    <script type="text/javascript" src="~/Scripts/app.admin.map.google.js"></script>
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3">
            <ul id="lstStations" class="stations unstyled"></ul>
        </div>
        <div class="span9">
            <div id="map" class="google-maps"></div>
        </div>
    </div>
</div>


@section footer {
    <script type="text/x-jquery-tmpl" id="tmplStation">
        <li class="station thumbnail" data-id="${station.id}" data-lat="${station.lat}" data-lng="${station.lng}">
            <i class="icon-{{if handled != null}}ok{{else}}remove{{/if}}"></i>
            ${station.name}
        </li>
    </script>
}
