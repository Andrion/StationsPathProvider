@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "../_Layout.cshtml";
}

@section styles {
    <style type="text/css">
        #map img { 
  max-width: none;
}

#map label { 
  width: auto; display:inline; 
} 
    </style>
}

@section scripts {
    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false&libraries=places"></script>
    <script type="text/javascript">
        function initialize(origin) {
            var map = new google.maps.Map(document.getElementById('map'), {
                mapTypeId: google.maps.MapTypeId.HYBRID,
                center: origin,
                zoom: 15
            });

            var originMarker = new google.maps.Marker({
                map: map,
                position: origin,
                title: "Ваше местоположение",
                content: "Ваше текущее местоположение (возможны отклонения)"
            });
        }

        function getOriginPosition(posCallback) {
            var lat = null;
            var lng = null;

            if (document.domain == "" || !navigator || !navigator.geolocation) {
                lat = 52.4030566;
                lng = 30.9090409;

                var pos = new google.maps.LatLng(lat, lng);
                posCallback(pos);
            } else {
                navigator.geolocation.getCurrentPosition(function(location) {
                    lat = location.coords.latitude
                    lng = location.coords.longitude;

                    var pos = new google.maps.LatLng(lat, lng);
                    posCallback(pos);
                });
            }
        }

        google.maps.event.addDomListener(window, 'load', function() {
            getOriginPosition(function(pos) {
                initialize(pos);
            });
        });

        $(function () {
            $(window).resize(function () {
                var h = $(window).height(),
                    offsetTop = 190; // Calculate the top offset

                $('#map').css('height', (h - offsetTop));
            }).resize();
        });
    </script>
}

<div id="map" class="map" style="height: 100%"></div>